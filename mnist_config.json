{
    "name": "Mnist_VaeCategory",
    "n_gpu": 1,

    "arch": {
        "type": "VaeCategoryModel",
        "args": {
          "data_dim": 784,
          "hidden_dim": 8
        }
    },
    "data_loader": {
        "type": "MnistTargetBatchDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "optim_args": {
              "lr": 1e-3,
              "weight_decay": 0,
              "amsgrad": true
            }
        }
    },
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "patience": 10,
            "factor": 0.1
        }
    },
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 75,

        "tensorboard": true
    }
}
