{
    "name": "FashionMnist_VaeCategory",
    "n_gpu": 1,

    "arch": {
        "type": "VAECategoryModel",
        "args": {
          "data_dim": 784,
          "hidden_dim": 10
        }
    },
    "data_loader": {
        "type": "FashionMnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "optim_args": {
              "lr": 1e-4,
              "weight_decay": 0,
              "amsgrad": true
            }
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 25,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 50,

        "tensorboard": true
    }
}
