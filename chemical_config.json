{
    "name": "SelfiesAutoencodingOperad",
    "n_gpu": 1,

    "arch": {
        "type": "SelfiesAutoencodingModel",
        "args": {
          "latent_space": [12]
        }
    },
    "data_loader": {
        "type": "SelfiesDataLoader",
        "args":{
            "csv": "data/SMILES/0SelectedSMILES_QM9.csv",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "optim_args": {
              "lr": 1e-3,
              "weight_decay": 0,
              "amsgrad": true
            }
        }
    },
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "patience": 10,
            "factor": 0.1
        }
    },
    "trainer": {
        "epochs": 5000,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 75,

        "tensorboard": true
    }
}
