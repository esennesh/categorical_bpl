{
    "name": "Molecular_GrammerAutoencodingOperad",
    "n_gpu": 1,

    "arch": {
        "type": "ZincGrammarAutoencodingModel",
        "args": {
          "max_len": 120,
          "charset_file": "data/ZINC/char_list.json",
          "latent_space": [128]
        }
    },
    "data_loader": {
        "type": "ZincMolecularDataLoader",
        "args":{
            "csv": "data/ZINC/zinc15_250K_2D.csv",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "optim_args": {
              "lr": 1e-3,
              "weight_decay": 0,
              "amsgrad": true
            }
        }
    },
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "patience": 10,
            "factor": 0.1
        }
    },
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 75,

        "tensorboard": true
    }
}
